{% extends 'base.html.twig' %}

{% block title %}Estadisticas | {{ parent() }} {% endblock %}

{% block body %}
    {% for  control, usuarios in jugadores %}
        <h1>{{ usuarios.nombre_jugador }}</h1>

        {% if control == 0 %}
            {% for palabras in jugador_1 %}
                <li> {{ palabras.id_imagen }} - {{ palabras.palabras_relacionadas }}
                    - {{ palabras.resultado_palabra }}</li>
            {% endfor %}

        {% elseif control == 1 %}
            {% for palabras in jugador_2 %}
                <li> {{ palabras.id_imagen }} - {{ palabras.palabras_relacionadas }}
                    - {{ palabras.resultado_palabra }}</li>
            {% endfor %}

        {% elseif control == 2 %}
            {% for palabras in jugador_3 %}
                <li>{{ palabras.id_imagen }} - {{ palabras.palabras_relacionadas }}
                    - {{ palabras.resultado_palabra }}</li>
            {% endfor %}
        {% endif %}
    {% endfor %}
    <a href="{{ path('app_dashboard') }}"><h1 class="bg-white">Ir a menu principal</h1></a>
{% endblock %}
