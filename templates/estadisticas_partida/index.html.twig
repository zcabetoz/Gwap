{% extends 'base.html.twig' %}

{% block title %}Estadisticas | {{ parent() }} {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="div-estadisticas" class="card-header">
                    <i class="bi bi-joystick"><span style="margin-left: 5px">Gwap</span></i>
                    <span style="margin-left: 100px">Estadisticas de la partida</span>
                    <a href="{{ path('app_dashboard') }}" class="volver">Menu Principal</a>
                </div>
            </div>
        </div>
        <section class="p-3 border" style="color: white;margin: 10px;border-radius: 20px;">
            <div class="row mt-3">
                <div class="col-md-4" style="border-right: solid 1px white">
                    <div class="card-body" style="overflow-y: auto">
                        <h2 class="text-center">
                            {{ jugadores.0.nombre_jugador }}
                            {% if (puntajeJugador_1 > puntajeJugador_2 and puntajeJugador_1 > puntajeJugador_3) %}
                                <i class="bi bi-trophy-fill" style="color:#D4AF37; margin-left: 20px"></i>
                            {% endif %}
                        </h2>
                        <div class="table-responsive text-center mt-3">
                            <table class="table table-striped table-hover">
                                <thead style="color: white; font-size: 20px">
                                <tr>
                                    <th>Imagen</th>
                                    <th>Palabra Relacionada</th>
                                    <th>Resultado</th>
                                    <th>Puntaje</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for palabras in jugador_1 %}
                                    <tr>
                                        <td class="text-white">
                                            <img src="{{ asset(palabras.url_imagen) }}" alt="{{ palabras.url_imagen }}"
                                                 style="height: 30px;width: 30px;border-radius: 10px">
                                        </td>
                                        <td class="text-white">
                                            {{ palabras.palabras_relacionadas }}
                                            {% if palabras.palabras_relacionadas in coincidencias %}
                                                <i class="bi bi-award-fill text-bg-primary"
                                                   style="border-radius: 5px; margin-left: 5px"></i>
                                            {% endif %}
                                        </td>
                                        <td class="text-white">
                                            {{ palabras.resultado_palabra }}
                                        </td>
                                        <td class="text-white">
                                            {% if palabras.resultado_palabra is same as ("INCORRECTO") %}
                                                0
                                            {% elseif palabras.palabras_relacionadas in coincidencias %}
                                                200
                                            {% else %}
                                                100
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot class="text-bg-primary">
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        Total Puntos :
                                    </td>
                                    <td>
                                        {{ puntajeJugador_1 }}
                                    </td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
