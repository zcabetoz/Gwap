{% extends 'base.html.twig' %}

{% block title %}Hello JugarController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-4 mt-5 text-center">
                <div class="card-header">
                    <h1>{{ url.0.descripcion | capitalize }}</h1>
                </div>
                <div class="card-body">
                    <img src="{{ asset(url.0.imagenUrl) }}" style="height: 80%;width: 80%">
                </div>

                <h2 class="mt-5">Palabras Relacionadas</h2>
                <ul id="lista de palabras">

                </ul>
                <form action="" method="post">
                    <label for="respuesta" class="form-label float-start"> <strong>Ingresar Palabras</strong></label>
                    <div class="input-group">
                        <div class="input-group-text gap-2" style="width: 100%">
                            <input type="text" name="respuesta" class="form-control" autofocus>
                            <button type="submit" class="input-group-text btn btn-primary btn-sm"> Enviar</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <div class="table-responsive text-center mt-5">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Posición</th>
                            <th>Usuario</th>
                            <th>Puntuación</th>
                        </tr>
                        </thead>
                        <tbody>
                        aquí se mostrarán las puntuaciones de los usuarios
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
